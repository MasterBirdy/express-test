<h1>{{title}}</h1>

{{#if bookinstances.length}}
<p><strong>Delete the following book instance before attempting to delete this author.</strong></p>
<div style="margin-left:20px;margin-top:20px">
<h4>Book Instances</h4>
<dl>
    {{#each bookinstances}}
    <dt>
        <a href="{{this.url}}">{{this.book.title}}</a>
    </dt>
    <dd>
        <p><strong>Imprint: </strong>{{this.imprint}}</p>
        <p><strong>Status:</strong> {{#if_eq this.status "Available"}}
        <span class="text-sucesss">{{this.status}}</span>
        {{else}}
        {{#if_eq this.status "Maintenance"}}
        <span class="text-danger">{{this.status}}</span>
        {{else}}
        <span class="text-warning">{{this.status}}</span>
        {{/if_eq}}
        {{/if_eq}}</p>
        {{#if_neq this.status "Available"}}
        <p><strong>Due Back: </strong>{{this.due_back}}</p>
        {{/if_neq}}
    </dd>
    {{/each}}
</dl>
</div>
{{else}}
<p>Do you really want to delete this book instance?</p>
<form action="" method="POST">
    <div class="form-group">
        <input type="hidden" name="bookid" id="bookid" class="form-control"
        required="true" value="{{book._id}}">
    </div>
    <button class="btn btn-danger" type="submit">Submit</button>
</form>
{{/if}}